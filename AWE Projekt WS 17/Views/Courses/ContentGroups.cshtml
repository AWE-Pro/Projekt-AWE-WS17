@model AWE_Projekt_WS_17.Models.Course

@{
    ViewBag.Title = "ContentGroups";
}

<br />

<h2>ContentGroups</h2>
@Html.ActionLink("Create new", "Edit2", "Courses")

<table class="table" style="margin-top: 50px;">
    <tr>
        <th>
            Header
        </th>
        <th>
            ID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ContentGroups)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseID })
            </td>
        </tr>
    }
</table>