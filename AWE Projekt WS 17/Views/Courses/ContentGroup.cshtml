@model IEnumerable<AWE_Projekt_WS_17.Models.ContentGroup>

@{
    ViewBag.Title = "ContentGroups";
}

<style>
    th {
        font-size: 1.25em;
    }

    table {
        border-collapse: separate;
        border-spacing: 0 0.5em;
    }

    #bg-color {
        background-color: #E6E6E6;
    }
</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Startseite</a></li>
        <li class="breadcrumb-item"><a href="#">Meine Kurse</a></li>
        <li class="breadcrumb-item active" aria-current="page">Kurs bearbeiten</li>
    </ol>
</nav>

<h2 style="padding-bottom: 30px;">
    ContentGroups
    <span style="float: none; padding-left: 5%;">
        @Html.ActionLink("Neu erstellen", "CreateContentGroup", new { id = ViewBag.ID }, new { @class = "btn btn-default" })
    </span>
</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="bg-color">
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td style="text-align: right;">
                <span class="btn-group" role="group">
                    @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Löschen", "DeleteContentGroup", new { id = item.ID }, new { @class = "btn btn-default" })
                </span>
            </td>
        </tr>
    }

</table>
