@model IEnumerable<AWE_Projekt_WS_17.Models.ContentGroup>

@{
    ViewBag.Title = "ContentGroups";
}

<h2>Content Groups</h2>

<p>
    @Html.ActionLink("Create New", "CreateContentGroup")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
