@model IEnumerable<AWE_Projekt_WS_17.Models.Course>

@{
    ViewBag.Title = "Index";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Startseite</a></li>
        <li class="breadcrumb-item"><a href="#">Kurssuche</a></li>
        <li class="breadcrumb-item active" aria-current="page">Suchergebnisse</li>
    </ol>
</nav>

<h2>SearchResults</h2>

<p>
    @Html.ActionLink("Back", "Search", "Courses")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Einschreiben", "Course", new { CourseId = item.ID })
            </td>
        </tr>
    }
</table>